{
    "name": "CallbackNotExposed",
    "steps": [
        {
            "step": "setState",
            "accounts": {
                "address:owner": {
                    "nonce": "1",
                    "balance": "0"
                },
                "sc:contract": {
                    "code": "file:../Output/TokenIdentifier.wasm"
                }
            }
        },
        {
            "step": "scCall",
            "id": "Check if valid ESDT buffer is valid",
            "tx": {
                "from": "address:owner",
                "to": "sc:contract",
                "function": "checkIfIsValid",
                "arguments": [
                    "str:TOKEN-abcdef"
                ],
                "gasLimit": "5,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "out": [
                    "true"
                ],
                "status": "0",
                "logs": "*"
            }
        },
        {
            "step": "scCall",
            "id": "Check if EGLD-000000 buffer is valid",
            "tx": {
                "from": "address:owner",
                "to": "sc:contract",
                "function": "checkIfIsValid",
                "arguments": [
                    "str:EGLD-000000"
                ],
                "gasLimit": "5,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "out": [
                    "true"
                ],
                "status": "0",
                "logs": "*"
            }
        },
        {
            "step": "scCall",
            "id": "Check if invalid ESDT buffer is invalid",
            "tx": {
                "from": "address:owner",
                "to": "sc:contract",
                "function": "checkIfIsValid",
                "arguments": [
                    "str:INVALID-a"
                ],
                "gasLimit": "5,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "out": [
                    "false"
                ],
                "status": "0",
                "logs": "*"
            }
        }
    ]
}
